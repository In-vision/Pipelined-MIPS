module JumpAddressDecoder 
(   
	input [25:0]  Address,
	input [31:0] PC_4,
   output reg [31:0] JumpAddress

);
   always @ (Address | PC_4)
     JumpAddress = {PC_4[31:28], Address, 2’b0};

endmodule 
